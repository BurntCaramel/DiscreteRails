<h1>Number Systems</h1>

<%= form_with(method: :get) do |f| %>
  <%= f.label :n, 'Selected number' %>
  <%= f.text_field :n, value: @active_n %>  
<% end %>

<dl>
  <dt>Base 2:</dt>
  <dd><%= render 'expanded', n: @active_n, base: 2 %></dd>

  <dt>Base 8:</dt>
  <dd><%= render 'expanded', n: @active_n, base: 8 %></dd>

  <dt>Base 10:</dt>
  <dd><%= render 'expanded', n: @active_n, base: 10 %></dd>

  <dt>Base 16:</dt>
  <dd><%= render 'expanded', n: @active_n, base: 16 %></dd>
</dl>

<%= render 'table', rows: @base2_rows, title: 'Base 2 (binary)', active_n: @active_n %>
<%= render 'table', rows: @base8_rows, title: 'Base 8 (octal)', active_n: @active_n %>
<%= render 'table', rows: @base10_rows, title: 'Base 10 (decimal)', active_n: @active_n %>
<%= render 'table', rows: @base16_rows, title: 'Base 16 (hexdecimal)', active_n: @active_n %>